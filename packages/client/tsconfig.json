{
  "include": ["**/*.ts", "**/*.tsx"],
  "noEmit": true,
  "compilerOptions": {
    "jsx": "react",
    "esModuleInterop": true,
    "rootDir": "../",
    "outDir": "./dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "paths": {
      "@damianopantani/zaliczgmine-server": ["../server/src/types/shared"]
    }
  }
}
